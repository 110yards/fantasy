{
  "hosting": {
    "public": "web/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "database": {
    "target": "default",
    "rules": "firebase.database.rules"
  },
  "emulators": {
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 9000
    },
    "database": {
      "host": "0.0.0.0",
      "port": 9001
    },
    "pubsub": {
      "host": "0.0.0.0",
      "port": 9085
    },
    "ui": {
      "host": "0.0.0.0",
      "enabled": true
    }
  }
}
